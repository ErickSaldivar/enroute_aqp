<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <!-- Navigation rules: use outcomes to navigate between views -->
    <!-- Specific rule for RegisterClient view: some JSF impls resolve navigation
         differently when the outcome originates from a specific view (and
         sometimes the flash/navigation stack). Add this narrowly-scoped rule
         so that returning 'mapa' from /client/RegisterClient.xhtml reliably
         navigates to /pages/mapa.xhtml. -->
    <application>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>es</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>
    <managed-bean>
        <managed-bean-name>localeBean</managed-bean-name>
        <managed-bean-class>beans.LocaleBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
        <from-view-id>/client/RegisterClient.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>mapa</from-outcome>
            <to-view-id>/pages/mapa.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <navigation-case>
            <from-outcome>loginClient</from-outcome>
            <to-view-id>/client/LoginClient.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        
        <navigation-case>
            <from-outcome>registerclient</from-outcome>
            <to-view-id>/client/RegisterClient.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>loginSuccess</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>mapa</from-outcome>
            <to-view-id>/pages/mapa.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>perfil</from-outcome>
            <to-view-id>/pages/perfil.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>rutas</from-outcome>
            <to-view-id>/pages/rutas.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>configuracion</from-outcome>
            <to-view-id>/pages/configuracion.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>usermng</from-outcome>
            <to-view-id>/admin/usersmng.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>routesmng</from-outcome>
            <to-view-id>/admin/routesmng.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        
    </navigation-rule>
    

</faces-config>
